@{
    ViewBag.Title = "Reservastion";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Home Page";
}

@inject Microsoft.Extensions.Configuration.IConfiguration Configuration





<div class="row"> <div class="col-md-6">
        <h3> Your favorite Blue Buddies </h3>
        @using BlueBud.Data        
        @using Microsoft.AspNetCore.Identity
        @model List<ChargerLocations>
 
        <ul>
            
           
           
            
                @foreach (var charger in Model)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@charger.ChargerName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@charger.ChargerType</h6>
                            <a asp-controller="ChargerLocations" asp-action="RemoveFav" asp-route-id="@charger.Id"> <button id="updatebutton" type="button" class="btn btn-danger">Remove From Favorites</button></a>

                        </div>
                    </div>
                } 
            
            
        </ul>
        
    </div>



        
        
</div>
